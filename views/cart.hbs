{{!< main}}

<!-- Cart Header -->
<section class="cart-header bg-primary text-white py-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12">
                <h1 class="display-5 fw-bold mb-0">
                    <i class="bi bi-cart3"></i> Tu Carrito de Compras
                </h1>
                <p class="lead mb-0">Revisa y completa tu pedido</p>
            </div>
        </div>
    </div>
</section>

<!-- Alert Messages -->
{{#if msg}}
    <div class="container mt-4">
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle"></i> {{msg}}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </div>
{{/if}}

<!-- Cart Content -->
<section class="cart-content py-5">
    <div class="container">
        <div class="row">
            <!-- Cart Items -->
            <div class="col-12 col-lg-8 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h3 class="mb-0">
                            <i class="bi bi-bag"></i> Productos en el Carrito
                        </h3>
                    </div>
                    <div class="card-body">
                        <div id="cartItems">
                            <!-- Cart items will be dynamically loaded here -->
                            <div class="text-center py-5">
                                <i class="bi bi-cart-x display-1 text-muted"></i>
                                <h4 class="mt-3 text-muted">Tu carrito está vacío</h4>
                                <p class="text-muted">Agrega algunos productos para comenzar</p>
                                <a href="/realTimeProducts" class="btn btn-primary">
                                    <i class="bi bi-shop"></i> Ir a la Tienda
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Checkout Form -->
            <div class="col-12 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h3 class="mb-0">
                            <i class="bi bi-credit-card"></i> Finalizar Compra
                        </h3>
                    </div>
                    <div class="card-body">
                        <form action="/cart" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="customerName" class="form-label">
                                    <i class="bi bi-person"></i> Nombre Completo
                                </label>
                                <input type="text" class="form-control" id="customerName" name="customerName" 
                                       placeholder="Ingresa tu nombre completo" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="customerEmail" class="form-label">
                                    <i class="bi bi-envelope"></i> Email
                                </label>
                                <input type="email" class="form-control" id="customerEmail" name="customerEmail" 
                                       placeholder="tu@email.com" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="customerPhone" class="form-label">
                                    <i class="bi bi-telephone"></i> Teléfono
                                </label>
                                <input type="tel" class="form-control" id="customerPhone" name="customerPhone" 
                                       placeholder="+54 9 11 1234-5678" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="shippingAddress" class="form-label">
                                    <i class="bi bi-geo-alt"></i> Dirección de Envío
                                </label>
                                <textarea class="form-control" id="shippingAddress" name="shippingAddress" 
                                          rows="3" placeholder="Ingresa tu dirección completa" required></textarea>
                            </div>
                            
                            <div class="mb-3">
                                <label for="paymentMethod" class="form-label">
                                    <i class="bi bi-credit-card"></i> Método de Pago
                                </label>
                                <select class="form-select" id="paymentMethod" name="paymentMethod" required>
                                    <option value="">Selecciona un método de pago</option>
                                    <option value="credit">Tarjeta de Crédito</option>
                                    <option value="debit">Tarjeta de Débito</option>
                                    <option value="transfer">Transferencia Bancaria</option>
                                    <option value="cash">Efectivo</option>
                                </select>
                            </div>
                            
                            <div class="mb-3">
                                <label for="notes" class="form-label">
                                    <i class="bi bi-chat-text"></i> Notas Adicionales
                                </label>
                                <textarea class="form-control" id="notes" name="notes" 
                                          rows="2" placeholder="Instrucciones especiales para el envío..."></textarea>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="bi bi-check-circle"></i> Confirmar Pedido
                                </button>
                                <a href="/realTimeProducts" class="btn btn-outline-primary">
                                    <i class="bi bi-arrow-left"></i> Seguir Comprando
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Order Summary -->
                <div class="card mt-3 shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h4 class="mb-0">
                            <i class="bi bi-receipt"></i> Resumen del Pedido
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span class="fw-bold">$0.00</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Envío:</span>
                            <span class="fw-bold">$0.00</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Impuestos:</span>
                            <span class="fw-bold">$0.00</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <span class="fs-5 fw-bold">Total:</span>
                            <span class="fs-5 fw-bold text-primary">$0.00</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Shipping Info -->
<section class="shipping-info bg-light py-4">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-4 mb-3">
                <div class="text-center">
                    <i class="bi bi-truck text-primary fs-1"></i>
                    <h5 class="mt-2">Envío Gratis</h5>
                    <small class="text-muted">En compras superiores a $50</small>
                </div>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <div class="text-center">
                    <i class="bi bi-clock text-success fs-1"></i>
                    <h5 class="mt-2">Entrega Rápida</h5>
                    <small class="text-muted">1-3 días hábiles</small>
                </div>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <div class="text-center">
                    <i class="bi bi-shield-check text-info fs-1"></i>
                    <h5 class="mt-2">Compra Segura</h5>
                    <small class="text-muted">Pago seguro y garantizado</small>
                </div>
            </div>
        </div>
    </div>
</section>